<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="examples.rock_paper_scissor.client.BattleController">
   <center>
       <GridPane prefHeight="63.0" prefWidth="337.0" BorderPane.alignment="CENTER" fx:id="gridPaneButtons"
                 visible="false">
           <columnConstraints>
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
           </rowConstraints>
           <BorderPane.margin>
               <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
           </BorderPane.margin>

           <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handlePaperButtonPress" text="Paper"
                   GridPane.columnIndex="1">
               <font>
                   <Font size="23.0"/>
               </font>
               <cursor>
                   <Cursor fx:constant="HAND"/>
               </cursor>
           </Button>


           <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleScissorButtonPress" text="Scissor"
                   GridPane.columnIndex="2">
               <font>
                   <Font size="23.0"/>
               </font>
               <cursor>
                   <Cursor fx:constant="HAND"/>
               </cursor>
           </Button>
           <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleRockButtonPress" text="Rock">
               <font>
                   <Font size="23.0"/>
               </font>
               <cursor>
                   <Cursor fx:constant="HAND"/>
               </cursor>
           </Button>
       </GridPane>
   </center>
   <bottom>
      <Label fx:id="labelWaitingPlayer" text="waiting player..." BorderPane.alignment="CENTER"/>
   </bottom>
</BorderPane>
